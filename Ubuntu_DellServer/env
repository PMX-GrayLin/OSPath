PATH=~/OSPath/Ubuntu_DellServer:$PATH
PATH=~/bin:$PATH

alias x='x.sh'
alias p3='python3'

# edit
alias ex='nano ~/OSPath/Ubuntu_DellServer/x.sh'
alias erc='nano ~/.bashrc'
alias ebb="nano $pp/src/meta-rity/meta-rity-demo/recipes-demo/images/rity-demo-image.bb"
alias econf="nano $pp/build/conf/local.conf"
alias ewifi='nano /etc/netplan/01-network-manager-all.yaml'

# dir
alias dh='cd ~'                                                 # dir home
alias dpp='cd $pp'                                              # dir project path
alias dpmx='cd $pp/src/meta-primax/recipes-primax/primax'       # dir primax
alias dpi='cd $pp/build/tmp/deploy/images/genio-700-evk'        # dir project build image path

# update
alias ue='source ~/.bashrc'     # update env
alias ux='x ux'                 # update x.sh
alias ua='ux && ue'             # update x.sh

# env
alias spp='export PROJ_ROOT=`pwd`'                              # set yocto project path
alias env1='TEMPLATECONF=$PROJ_ROOT/src/meta-rity/meta/conf/'
alias env2='source $PROJ_ROOT/src/poky/oe-init-build-env'
alias env3='export BUILD_DIR=$PROJ_ROOT/build'
alias env_mtk='env1 && env2 && env3'
alias spe='spp && env_mtk'                                      # set project env